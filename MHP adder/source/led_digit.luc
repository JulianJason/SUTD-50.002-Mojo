module led_digit (
    input char[4],
    output segs[7]
  ) {

  always {
    case (char) {
      0: segs = 7b0111111;      // digit 0
      1: segs = 7b0000110;      // digit 1
      2: segs = 7b1101101;      // S symbol (deprecated)
      3: segs = 7b0111001;      // C symbol (deprecated)
      default: segs = 7b0000000;
    }
  }
}
